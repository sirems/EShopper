@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<form>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" onchange="this.form.submit()" >
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="BrandId">Brand</label>
                <select asp-for="BrandId" asp-items="Model.Brands" class="form-control" onchange="this.form.submit()">
                </select>
            </div>
        </div>
    </div>
</form>



@*https://startbootstrap.com/templates/shop-homepage/*@

<div class="row">
    @foreach (var product in Model.Products)
    {   
        <partial name="_ProductPartial" model="product"/>
    }

</div>

<div>
    Toplam sayfa adedi:@Model.PaginationInfo.TotalPages <br />
    Şuan ki sayfa: @Model.PaginationInfo.ActualPage <br />
    Toplam öğe adedi:@Model.PaginationInfo.TotalItems <br />
    Bu sayfadaki öğe adedi: @Model.PaginationInfo.ItemsOnPage<br />
</div>